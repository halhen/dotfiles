use_xft yes
xftfont 123:size=8
xftalpha 0.1
update_interval 3
total_run_times 0

own_window yes
own_window_type normal
own_window_transparent no
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_colour 000000
own_window_argb_visual yes
own_window_argb_value 110

double_buffer yes
#minimum_size 250 5
maximum_width 600
draw_shades yes
draw_outline no
draw_borders no
draw_graph_borders no
default_color ccd4ba
default_shade_color 444f4c
default_outline_color black
alignment middle_left
xinerama_head 2
gap_x 0
gap_y -60
no_buffers yes
uppercase no
cpu_avg_samples 2
net_avg_samples 1
override_utf8_locale yes
use_spacer yes


minimum_size 0 0

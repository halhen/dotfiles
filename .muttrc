# Maildir configuration
set mbox_type       = Maildir
set folder          = ~/.mail
set spoolfile       = +INBOX
set mail_check      = 0
source ~/.mutt/mailboxes # offlineimap generated list of mailboxes

# Mail sending configuration
set sendmail = "/usr/bin/msmtp"
unset record # Gmail stores a copy

# Address book
source ~/.mutt/muttalias
set alias_file  = ~/.mutt/muttalias

# Index settings
set sort            = threads
set sort_aux        = reverse-last-date-received
set sort_re

# Pager settings
set pager_index_lines   = 8
set pager_context       = 5
set pager_stop
set menu_scroll
set smart_wrap
set tilde
unset markers

# Text-ify text/html parts automatically
set mailcap_path = ~/.mutt/mailcap
set implicit_autoview
auto_view text/html

# Mail composition settings
set realname        = "Henrik Hallberg"
set from            = "Henrik Hallberg <henrik@k2h.se>"
set envelope_from
# Move cursor to beneath headers 
set editor          = '/usr/bin/vim -c "set tw=72" +/^$'
set edit_headers    = yes

# Reply and forward settings
set fast_reply # Don't ask for recipients and subject
set include # Include body of the mail I'm replying to
set forward_format      = "Fwd: %s"
set fcc_attach # Forward attachments
unset mime_forward # ... in the mail
set forward_quote # ... and quote what I'm forwarding

# Which headers to care about
ignore *
unignore from: to: cc: date: subject
hdr_order from: to: cc: date: subject

# When to confirm
unset move
set delete
set quit

# Regular colors
color   normal      white   default
color   hdrdefault  green   default
color   quoted      green   default
color   quoted1     yellow  default
color   quoted2     red     default
color   tree        brightmagenta   default
color   attachment  brightyellow    default
color   search      brightwhite     default
color   error       red             default

# Headers
color   header      brightyellow    default "^(From|Subject):"
color   header      brightcyan      default ^To:
color   header      brightcyan      default ^CC:

# Colors by status
# New messages.
color   index       brightyellow    default "~N"
color   index       brightyellow    default "~O"
# Flagged messages
color   index       brightred       default "~F"

# URL highlight
color   body        brightblue      default "(http|https|ftp)://[^ \">\t\r\n]*"
color   body        brightblue      default "www\.[^ \"\t\r\n]+"
color   body        brightblue      default "[-a-z_0-9.%$]+@[-a-z_0-9.]+\.[-a-z][-a-z]+"
